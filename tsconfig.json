{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "outDir": "./dist",
    "types": ["vite/client", "svelte", "fvtt-types"]
  },
  "include": ["src"]
}
