{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "outDir": "./dist",
    "types": ["vite/client", "svelte", "foundryvtt-types"]
  },
  "include": ["src", "node_modules/foundryvtt-types"]
}
